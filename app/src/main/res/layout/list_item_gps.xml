<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_gps_height"
    android:layout_marginStart="@dimen/card_gps_margin_horizontal"
    android:layout_marginEnd="@dimen/card_gps_margin_horizontal"
    android:layout_marginTop="@dimen/card_gps_margin_vertical"
    android:layout_marginBottom="@dimen/card_gps_margin_vertical"
    app:cardElevation="@dimen/card_gps_elevation"
    app:cardCornerRadius="@dimen/card_gps_radius">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/card_gps_container_padding"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewName"
                    style="@style/TextAppearance.AppCompat.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_figma"
                    app:fontFamily="@font/font_figma"
                    android:includeFontPadding="false"
                    android:text="@string/gps_card_title" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewRating"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/textview_gps_margin_bottom"
                    android:fontFamily="@font/font_figma"
                    app:fontFamily="@font/font_figma"
                    android:includeFontPadding="false"
                    android:text="@string/gps_card_description" />

                <com.google.android.material.button.MaterialButton
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/buttonEnableGps"
                    android:fontFamily="@font/font_figma"
                    app:fontFamily="@font/font_figma"
                    android:includeFontPadding="false"
                    android:textAlignment="center"
                    android:textColor="@color/colorGpsButtonText"
                    android:background="@color/colorGpsButton"
                    app:backgroundTint="@null"
                    android:text="@string/gps_card_action"
                    android:layout_height="@dimen/gps_button_height"
                    android:layout_width="@dimen/gps_button_width"/>

            </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>