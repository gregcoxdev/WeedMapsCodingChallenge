<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorSuggestionBackground"
    tools:context=".ui.view.HelloWorldActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_label"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/suggestion_margin_horizontal"
        android:layout_marginTop="@dimen/suggestion_margin_vertical"
        android:layout_marginEnd="@dimen/suggestion_margin_horizontal"
        android:layout_marginBottom="@dimen/suggestion_margin_vertical"
        android:textColor="@color/colorText"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Item" />

</androidx.constraintlayout.widget.ConstraintLayout>